  body
    .content
      .container(style='position: absolute; left: 22em; top: -4.0em; width: 40em; border-radius: 25px')
        form.form-horizontal(name='login', action='/login', method='post')
          fieldset
            #legend
              legend(style='text-align: center; font-size: 5em; color: white') Login
            .control-group
              label.control-label(for='username') Username
              .controls
                input#username.form-control.input-lg(type='text', placeholder='Username', name='username')
              .control-group
                label.control-label(for='password') Password
                .controls
                  input#password.form-control.input-lg(type='password', placeholder='Password', name='password')
              div(style="height: 2em")
              .control-group
                // Button
                .controls(style='text-align: center;')
                  button.btn.btn-success(style='font-size: 22px') Login
