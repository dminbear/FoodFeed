html
  head
    title Food Feed
    link(href='http://fonts.googleapis.com/css?family=Oswald', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(href='http://fonts.googleapis.com/css?family=Varela+Round', rel='stylesheet', type='text/css')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    link(rel='stylesheet', type='text/css', href='../css/style.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
  body
    .content
      .container(style='position: absolute; left: 22em; top: -4.0em; width: 40em; border-radius: 25px')
        form.form-horizontal(name='register', action='/register', method='post', enctype= 'multipart/form-data')
          fieldset
            #legend
              legend(style='text-align: center; font-size: 5em; color: white') Register
            .control-group
              label.control-label(for='username') Username
              .controls
                input#username.form-control.input-lg(type='text', name='username', placeholder='')
                p.help-block(style='color: white') Username can contain any letters or numbers, without spaces
              .control-group
                label.control-label(for='email') E-mail
                .controls
                  input#email.form-control.input-lg(type='email', name='email', placeholder='')
                  p.help-block(style='color: white') Please provide your E-mail
              .control-group
                label.control-label(for='password') Password
                .controls
                  input#password.form-control.input-lg(type='password', name='password', placeholder='')
                  p.help-block(style='color: white') Password should be at least 6 characters
              .control-group
                label.control-label(for='password') Description
                .controls
                  input#password.form-control.input-lg(type='text', name='description', placeholder='')
                  p.help-block(style='color: white') Tell us about your place!
              .control-group
                // Button
                .controls(style='text-align: center;')
                  button.btn.btn-success(style='font-size: 22px') Register
      // /.container
    .background-image
    // /.wrapper
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js', type='text/javascript')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.13.1/jquery.validate.min.js')
